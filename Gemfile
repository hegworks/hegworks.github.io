source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"
gem "jekyll-theme-chirpy", "~> 7.2"

# Ruby 3.4+ required gems
gem "csv"
gem "logger"
gem "fiddle"
gem "base64"

# Windows support
gem "tzinfo", ">= 1", "< 3"
gem "tzinfo-data"
gem "wdm", "~> 0.2", platforms: [:windows]

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-remote-theme"
  gem "jekyll-paginate"
  gem "jekyll-redirect-from"
  gem "jekyll-seo-tag"
  gem "jekyll-archives"
  gem "jekyll-sitemap"
  gem "jekyll-include-cache"
end
