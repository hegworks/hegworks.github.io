source "https://rubygems.org"

gem "jekyll", "~> 4.4"
gem "jekyll-theme-chirpy", "~> 7.2"

# Silence Ruby 3.5 warnings
gem "logger"
gem "fiddle"

# Windows support
gem "tzinfo", ">= 1", "< 3"
gem "tzinfo-data"
gem "wdm", "~> 0.2", platforms: [:windows]

# Jekyll plugins
group :jekyll_plugins do
  gem "jekyll-redirect-from"
  gem "jekyll-seo-tag"
  gem "jekyll-archives"
  gem "jekyll-sitemap"
  gem "jekyll-include-cache"
end
